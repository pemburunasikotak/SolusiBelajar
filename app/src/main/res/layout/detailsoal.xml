<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:background="@drawable/back_soal"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nomersoal"
            android:layout_width="100px"
            android:layout_height="100px"

            android:layout_marginLeft="21dp"
            android:layout_marginTop="5dp"
            android:background="#EBCE3F"
            android:padding="4dp"
            android:text="1"
            android:textAlignment="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textsoal"
            android:layout_width="367dp"
            android:layout_height="100dp"
            android:layout_marginRight="21px"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:background="#EBCE3F" />

        <TextView
            android:id="@+id/pilgana"
            android:layout_width="368dp"
            android:layout_marginRight="21px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="5dp"
            android:background="#EBCE3F"
            android:padding="4dp"
            android:textAlignment="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/pilganb"

            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="#EBCE3F"
            android:maxLines="2"
            android:padding="4dp"
            android:textAlignment="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/pilganc"
            android:layout_width="368dp"

            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="21dp"
            android:background="#EBCE3F"
            android:maxLines="2"
            android:padding="4dp"
            android:textAlignment="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/pilgand"
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="21px"
            android:background="#EBCE3F"
            android:maxLines="2"
            android:padding="4dp"
            android:textAlignment="center"
            android:textSize="15dp" />
    </LinearLayout>


</LinearLayout>