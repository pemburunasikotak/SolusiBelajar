<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@drawable/back_datadiri"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/rectangle_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/login"
            android:layout_width="73dp"
            android:layout_height="38dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-black"
            android:gravity="top"
            android:lineSpacingExtra="9sp"

            android:text="@string/login"
            android:textAppearance="@style/login"
            android:textColor="#1878C5"
            android:translationY="-4.35sp"
            app:layout_constraintBottom_toTopOf="@+id/group_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.55"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.558"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <View
            android:id="@+id/group_24"
            android:layout_width="321dp"
            android:layout_height="215dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="136dp"
            android:background="#FFFFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.633"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/form_passwo"
            android:layout_width="281dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="28dp"
            android:background="#71ADDD"
            android:gravity="center"
            android:inputType="textPassword"
            android:hint="PASSWORD"
            app:layout_constraintEnd_toEndOf="@+id/group_24"
            app:layout_constraintStart_toStartOf="@+id/group_24"
            app:layout_constraintTop_toBottomOf="@+id/form_email" />

        <EditText
            android:id="@+id/form_email"
            android:layout_width="281dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:background="#71ADDD"
            android:gravity="center"
            android:hint="EMAIL"
            app:layout_constraintEnd_toEndOf="@+id/group_24"
            app:layout_constraintStart_toStartOf="@+id/group_24"
            app:layout_constraintTop_toTopOf="@+id/group_24" />

        <Button
            android:id="@+id/tombol_logi"
            android:layout_width="281dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="28dp"
            android:background="#71ADDD"
            android:text="LOGIN"
            android:textColor="#FEFCFF"
            app:layout_constraintBottom_toBottomOf="@+id/group_24"
            app:layout_constraintEnd_toEndOf="@+id/group_24"
            app:layout_constraintStart_toStartOf="@+id/group_24"
            app:layout_constraintTop_toBottomOf="@+id/form_passwo"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/tombol_daftar"
            android:layout_width="281dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"

            android:background="#71ADDD"
            android:text="daftar"
            android:textColor="#FEFCFF"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/group_24"
            app:layout_constraintVertical_bias="0.219" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>